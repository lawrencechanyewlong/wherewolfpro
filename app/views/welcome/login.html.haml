.container
  %h1 Login
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Please Sign In
        .panel-body
          %form{:role => "form"}
            %fieldset
              .form-group
                %input.form-control{:autofocus => "", :name => "email", :placeholder => "E-mail", :type => "email"}/
              .form-group
                %input.form-control{:name => "password", :placeholder => "Password", :type => "password", :value => ""}/
              .checkbox
                %label
                  %input{:name => "remember", :type => "checkbox", :value => "Remember Me"}>/
                  Remember Me
              / Change this to a button or input when using this as a form
              %a.btn.btn-lg.btn-success.btn-block{:href => "index.html"} Login
          %a.btn.btn-success{:href => "/contacts/gmail"} Or Login with Gmail!
  %a{:href => "http://citydogshare.org"}
    = image_tag("citydogshare_logo.jpg", :size => '150x150', :id => "citydogshare_logo", :style => "margin: auto;")
