%h1 Login
= form_tag users_login_path, :method => :get do
  = label :user, :email, "Email"
  = text_field :user, :email
  %br
  = label :user, :password
  = password_field :user, :password
  = submit_tag "login"
  

.container
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Other
        .panel-body
          %a.btn.btn-success{:href => "/contacts/gmail"} Or Login with Gmail!
          %a.btn.btn-success{:href => "/welcome/new_user"} new user?
  %a{:href => "http://citydogshare.org"}
    = image_tag("citydogshare_logo.jpg", :size => '150x150', :id => "citydogshare_logo", :style => "margin: auto;")
