.container
	.row
		.col-lg-12.text-center{:style => "padding: 100px"}
			%p The Wherewoof App is a project of City Dog Share
			%p a 501c3 nonprofit organization
			%a{:href => "http://citydogshare.org"}
				= image_tag("citydogshare_logo.jpg", :size => '80x80', :id => "citydogshare_logo", :style => "margin: auto;")
			/ %a.btn.btn-success{:href => "/event/select_contacts"}
			/ 	%span contacts
			/ 	%span.glyphicon.glyphicon-plus{"aria-hidden" => "true"}
			%br
			- if session[:id]
				%p Currently logged in as #{@name}
			- if session[:id] == nil
				%p
					%a.btn.btn-success{:href => "#", :submit_tag => "login",:class => "btn btn-primary", :value => "login"}
						%span Login with AppleID
				%p
					%a.btn.btn-success{:href => "/contacts/gmail", :submit_tag => "login",:class => "btn btn-primary", :value => "login"}
						%span Login with Gmail
			

%nav.navbar.navbar-fixed-bottom{:style => "background: #000; padding: 20px"}
	.container
		.row
			.col-xs-3
				- if session[:id]
					%a.btn.btn-success{:href => "/welcome/destroy", :submit_tag => "logout",:class => "btn btn-danger", :value => "logout"}
						%span Logout
			.col-xs-6
			.col-xs-3
				- if session[:id]
					%a.btn.btn-success{:controller => "event", :action => "new", method: :post,:href => "/event/select_destination"}
						%span New
						%span.glyphicon.glyphicon-plus{"aria-hidden" => "true"}
				
					