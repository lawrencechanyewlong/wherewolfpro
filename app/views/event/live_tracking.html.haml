%html
  %head
    %meta{:content => "initial-scale=1.0, user-scalable=no", :name => "viewport"}/
    %meta{:charset => "utf-8"}/
    :css
      html, body {
        height: 100%;
        margin-left: 5px; 
        margin-right: 5px; 
        padding: 0;
      }
      #map {
        height: 80%;
      }
  %body
    #map
    :javascript
      // Note: This example requires that you consent to location sharing when
      // prompted by your browser. If you see the error "The Geolocation service
      // failed.", it means you probably did not give permission for the browser to
      // locate you.
      
      function initMap() {
        var map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: -34.397, lng: 150.644},
          zoom: 18
        });
        
      var marker = null;
    
      var data = {latitude: '', longitude: '', hour: '', minute: ''};  
      function autoUpdate() {
        navigator.geolocation.getCurrentPosition(function(position) {  
            var newPoint = new google.maps.LatLng(position.coords.latitude, 
                                                position.coords.longitude);
                           
            var lat = position.coords.latitude;
            var lng = position.coords.longitude;
            data['latitude'] = lat;
            data['longitude'] = lng;
            var dt = new Date();
            data['hour'] = dt.getHours();
            data['minute'] = dt.getMinutes(); 

            var url = '/event/live_tracking/#{@event.id}';
            
            $.ajax({
              type: "POST",
              url: '/event/live_tracking/#{@event.id}',
              data: data
             
            });

            if (marker) {
            // Marker already created - Move it
                marker.setPosition(newPoint);
            }
            
            else {
            // Marker does not exist - Create it
                marker = new google.maps.Marker({
                    position: newPoint,
                    map: map
                });
            }

            // Center the map on the new position
            map.setCenter(newPoint);
            
            
        }); 
        
        
       
       
        setTimeout(autoUpdate, 1000);
        
      }
      
        autoUpdate();

      }
    %script{:async => "", :defer => "defer", :src => "https://maps.googleapis.com/maps/api/js?&callback=initMap"}
