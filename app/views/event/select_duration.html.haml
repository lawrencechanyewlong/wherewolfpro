%h1 Select Duration

%div{:class => 'col-md-8'}
    = form_tag 'select_contacts', :method => :post do
        Until I Arrive
        = range_field 'until_i_arrive', 'until_i_arrive', {:min => '0', :max => '1', :step => '1', :value => '0'}
    
        Until This Time
        = range_field 'until_this_time', 'until_this_time', {:min => '0', :max => '12', :step => '1', :value => '0'}

        %br
        For This Many Hours
        = range_field 'hours', 'hours', {:min => '0', :max => '12', :step => '1', :value => '0'}
        

        = button_tag :nxt
        
        %label.btn.btn-default
            = radio_button_tag :am, false
            AM
        
        %label.btn.btn-default
            = radio_button_tag :pm, false
            PM
        
        
